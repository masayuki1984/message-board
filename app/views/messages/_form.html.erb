<%= form_for(@message, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= label :message, :name, "名前", class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= label :message, :age, "年齢", class: "col-sm-1 control-label" %>
    <div class="col-sm-1">
      <%= f.text_field :age, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= label :message, :body, "内容", class: "col-sm-1 control-label" %>
    <div class="col-sm-10 text-area-padding">
      <%= f.text_area :body, :rows => "10", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-1">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>