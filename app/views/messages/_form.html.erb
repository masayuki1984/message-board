<%= form_for (@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <form class="form-horizontal">
    <div class="form-group form-padding">
      <label for="inputName" class="col-sm-1 control-label">名前:</label>
      <div class="col-sm-4">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
    
    <div class="form-group form-padding">
      <label for="inputAge" class="col-sm-1 control-label">年齢:</label>
      <div class="col-sm-1">
        <%= f.text_field :age, :class => "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <label for="inputText" class="col-sm-1 control-label">内容:</label>
      <div class="col-sm-10 text-area-padding">
        <%= f.text_area :body, :cols => "40", :rows => "10" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-1">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  
  </form>
<% end %>