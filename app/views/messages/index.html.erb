<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <form class="form-horizontal">
    <div class="form-group form-padding">
      <label for="inputName" class="col-sm-1 control-label">名前:</label>
      <div class="col-sm-10">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputText" class="col-sm-1 control-label">内容:</label>
      <div class="col-sm-10 text-area-padding">
        <%= f.text_area :body, :cols => "40", :rows => "10" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-1">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  
  </form>
<% end %>